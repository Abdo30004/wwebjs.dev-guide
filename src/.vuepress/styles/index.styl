/* Scrollbar width */
::-webkit-scrollbar {
  width: 7px;
}

/* Scrollbar background */
::-webkit-scrollbar-track {
  background: #1A1A1A;
}
 
::-webkit-scrollbar-thumb {
  background: #25D366;
  border-radius: 10px; 
}

::-webkit-scrollbar-thumb:hover {
  background: darken(#25D366, 30%);; 
}