.home .hero img
  max-width 450px!important

pre .code-copy
  margin-top -0.85rem;
  svg path:nth-child(2)
    fill #42b983

/* width */
::-webkit-scrollbar {
  width: 7px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #A1A1fA1;
  border-radius: 10px;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
  background: #25D366;
  border-radius: 10px; 
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #555; 
}