/* File is optimize able */

.home .hero img
  max-width 450px!important

pre .code-copy
  margin-top -0.85rem;
  svg path:nth-child(2)
    fill #42b983

.custom-block.danger, .custom-block.tip, .custom-block.warning {
  border-radius: 6px;
}

/* Scrollbar width */
::-webkit-scrollbar {
  width: 7px;
}

/* Scrollbar background */
::-webkit-scrollbar-track {
  background: #1A1A1A;
}

/* Scrollbar color */
::-webkit-scrollbar-thumb {
  background: #25D366;
  border-radius: 10px; 
}

/* Scrollbar color hover */
::-webkit-scrollbar-thumb:hover {
  background: darken(#25D366, 30%);; 
}

