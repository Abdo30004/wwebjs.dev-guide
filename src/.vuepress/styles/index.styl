/* Root directory for extra properties */
:root {
  --scrollbar-background: #EDEDED;
  --theme-color: #25D366;
  --sidebar-color: 37, 211, 102;
}

/* No change due to events */
.home .hero img {
  max-width 450px!important;
}
div.page-nav, footer.page-edit, .theme-default-content:not(.custom) {
  max-width: 1050px;
}
.custom-block.danger, .custom-block.tip, .custom-block.warning {
  border-radius: 6px;
}
a.sidebar-link.active {
  border-radius: 3px;
}
.theme-default-content:not(.custom) img {
  border-radius: 6px;
}
html ::-webkit-scrollbar {
  width: 8px;
}
aside.sidebar {
  border-right: 0px;
}

/* Change Events */
.yuu-theme-dark {
  --scrollbar-background: #171717; 
}
.yuu-theme-blue {
  --theme-color: #2196F3;
  --sidebar-color: 33, 150, 243;
}
.yuu-theme-red {
  --theme-color: #DE3636;
  --sidebar-color: 222, 54, 54;
}
.yuu-theme-purple {
  --theme-color: #A846EB;
  --sidebar-color: 168, 70, 235;
}

/* Changes due to events */
html ::-webkit-scrollbar-track {
  background: var(--scrollbar-background);
}
html ::-webkit-scrollbar-thumb {
  background: var(--theme-color);
  border-radius: 10px;
}
html ::-webkit-scrollbar-thumb:hover {
  background: darken(rgba(var(--sidebar-color)), 20%);
}
pre .code-copy {
  margin-top -0.85rem;
  svg path:nth-child(2) {
    fill var(--theme-color)
  }
}