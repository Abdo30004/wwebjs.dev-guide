.home .hero img
  max-width 450px!important;

pre .code-copy
  margin-top -0.85rem;
  svg path:nth-child(2)
    fill #42b983

div.page-nav {
  max-width: 1050px;
}

footer.page-edit {
  max-width: 1050px;
}

aside.sidebar {
  border-right: 0px;
}

.custom-block.danger, .custom-block.tip, .custom-block.warning 
  border-radius: 6px;

a.sidebar-link.active 
  border-radius: 3px;


.theme-default-content:not(.custom) img 
  border-radius: 6px;

.theme-default-content:not(.custom) 
  max-width: 1050px;


/* Scrollbar width */
html ::-webkit-scrollbar 
  width: 8px;

/* Scrollbar background */
html ::-webkit-scrollbar-track {
  background: #EDEDED;
}
.yuu-theme-dark {
  html ::-webkit-scrollbar-track {
    background: #171717;
  }
}

/* Scrollbar color */
html ::-webkit-scrollbar-thumb
  background: #25D366;
  border-radius: 10px; 

/* Scrollbar color hover */
html ::-webkit-scrollbar-thumb:hover
  background: darken(#25D366, 30%);